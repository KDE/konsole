{
    "id": "org.kde.konsole",
    "branch": "master",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.10",
    "sdk": "org.kde.Sdk",
    "command": "konsole",
    "tags": ["nightly"],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": [
        "--device=all",
        "--share=ipc",
        "--share=network",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--talk-name=org.freedesktop.Flatpak"
    ],
    "rename-icon": "utilities-terminal",
    "modules": [
        {
            "name": "konsole",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DINSTALL_ICONS=ON"
            ],
            "sources": [
                { "type": "dir", "path": "." }
            ]
        }
    ]
}
